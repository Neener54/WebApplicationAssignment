<div id="data">
  <div id="clear_twitter">
    <% if @timeline.present? %>
      <h2>Recent Tweets of <%= @user.user.name%></h2>
      <div class="row">
        <div class="col-md-7">
        <p><%= image_tag @user.user.profile_image_url_https("original") %><br/>
        <p><%= @user.user.name %></p>
         @<span class="link"><%= link_to @user.user.screen_name,"https://twitter.com/"+ @user.user.screen_name, :target => "new"%></span>
        </div>
		<div class="col-md-5">
		  <% @timeline.each do |client| %>
		    <p><%= raw @client.oembed(client.id).html %></p>
		    <p><%= "Source of tweet: <strong>#{client.source}</strong>".html_safe %></p>
		  <% end %>
		</div>
      </div>
<% else %>
  Sorry something went wrong...
<% end %>
</div>
</div>